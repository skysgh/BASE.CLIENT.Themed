{
  "name": "base",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:fast": "ng serve",
    "start:with-tests": "npm run test:critical && ng serve",
    "build": "npm run test:critical && npm run build:prod",
    "build:fast": "ng build",
    "build:prod": "ng build --configuration production && npm run metrics:copy",
    "build:dev": "ng build --configuration development",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:watch": "ng test --watch",
    "test:coverage": "ng test --code-coverage",
    "test:ci": "ng test --browsers=ChromeHeadless --watch=false --code-coverage",
    "test:single": "ng test --include='**/*.spec.ts' --watch=false",
    "test:headless": "ng test --browsers=ChromeHeadless --watch=false",
    "test:critical": "ng test --include='**/core/**/*.spec.ts' --browsers=ChromeHeadless --watch=false",
    "test:tier:core": "ng test --include='**/core/**/*.spec.ts' --browsers=ChromeHeadless --watch=false",
    "test:tier:coreag": "ng test --include='**/core.ag/**/*.spec.ts' --browsers=ChromeHeadless --watch=false",
    "test:tier:parts": "ng test --include='**/sites.app.parts/**/*.spec.ts' --browsers=ChromeHeadless --watch=false",
    "test:tier:lets": "ng test --include='**/sites.app.lets/**/*.spec.ts' --browsers=ChromeHeadless --watch=false",
    "test:tier:sites": "ng test --include='**/sites/**/*.spec.ts' --include='**/sites.anon/**/*.spec.ts' --include='**/sites.app/**/*.spec.ts' --browsers=ChromeHeadless --watch=false",
    "test:tier:themes": "ng test --include='**/themes/**/*.spec.ts' --browsers=ChromeHeadless --watch=false",
    "test:smoke": "ng test --include='**/*smoke*.spec.ts' --browsers=ChromeHeadless --watch=false",
    "test:all": "ng test --browsers=ChromeHeadless --watch=false --code-coverage",
    "test:report": "npm run test:all && node scripts/generate-test-report.js",
    "metrics:generate": "npm run test:report",
    "metrics:copy": "node scripts/copy-metrics-to-assets.js",
    "metrics:serve": "npm run metrics:generate && npm run metrics:copy",
    "soul": "soul --database=_custom/sqlite/base.db --p=4202",
    "json-server": "json-server --port=4202 --routes=_custom/json-server/routes.json _custom/json-server/data.json",
    "json-server:with-static": "json-server --port=4202 --routes=_custom/json-server/routes.json --static src/assets _custom/json-server/data.json",
    "start-local-json-server": "concurrently --kill-others-on-fail \"npm run json-server\" \"npm run start\"",
    "start-local-json-server2": "\"npm run json-server\" & \"npm run start\"",
    "start-local-json-server-with-static": "concurrently --kill-others-on-fail \"npm run json-server:with-static\" \"npm run start\"",
    "start-local-soul": "concurrently --kill-others-on-fail \"npm run soul\" \"npm run start\"",
    "_comments": {
      "_json-server-discovery": "ðŸ’¡ json-server can serve BOTH API endpoints AND static files!",
      "_static-flag": "Use --static <path> to serve static files (like /assets/)",
      "_why-useful": "Single server (:4202) can serve API + assets (no need for :4200)",
      "_use-case-1": "Testing: Mock both backend API and static assets from one server",
      "_use-case-2": "Deployment: Simple single-server setup for demos",
      "_caution": "In production, use proper CDN for assets (Cloudflare, AWS S3, etc.)",
      "_example-basic": "json-server --static ./public data.json",
      "_example-our-setup": "json-server --port=4202 --static src/assets --routes=_custom/json-server/routes.json _custom/json-server/data.json",
      "_result": "API at :4202/api/rest/* + Assets at :4202/assets/*",
      "_vs-angular-serve": "Angular serve (:4200) still needed for dev (HMR, live reload)",
      "_when-to-use": "Use 'start-local-json-server-with-static' to test full backend simulation"
    }
  },
